\cf2 \strokec3 6.Selezionare tutti i docenti che insegnano nel Dipartimento di Matematica (54)\
\cf3 \
SELECT DISTINCT `teachers`.`name` AS `nome_docente`, `teachers`.`surname` AS `cognome_docente`, `teachers`.`office_address` AS `ufficio_docente`\
FROM `departments`\
JOIN `degrees` ON `degrees`.`department_id`=`departments`.`id`\
JOIN `courses` ON `courses`.`degree_id`=`degrees`.`id`\
JOIN `course_teacher` ON `course_teacher`.`course_id`=`courses`.`id`\
JOIN `teachers` ON `teachers`.`id`=`course_teacher`.`teacher_id`\
WHERE `departments`.`name` = 'Dipartimento di Matematica'\
ORDER BY `cognome_docente`, `nome_docente`\
;\
